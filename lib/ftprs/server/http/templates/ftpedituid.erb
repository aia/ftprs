<html>
<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8">
  <title>Editing Entry #<%= params[:postuid] %></title>
  <link rel="stylesheet" type="text/css" href="/styles.css" />
</head>
<body>
  <div id="fw_container">
    <%= partial :header %>
    <div id="table">
      <h2>Editing Entry #<%= params[:postuid] %></h2>
      To change password for this user click <a href="/ftprs/users/passwd/<%= @user[:cn] %>">here</a><br /><br />
      <form method=POST action="/ftprs/users/edit/<%= params[:postuid] %>" >
        <table border='0' cellpadding='0' cellspacing='0' class='display' id='example'>
          <thead>
            <tr>
              <th width='40%'>Entry Parameter Name</th>
              <th width='60%'>Entry Parameter Value</th>
            </tr>
          </thead>
          <tbody>
<%= partial :trvalue,%w{sn givenname gecos cn mail sambasid homedirectory uid loginshell uidnumber dn gidnumber} %>
            <tr>
              <td></td><td><input type=submit VALUE="Submit Changes" ></td>
            </tr>
          </tbody>
        </table>
      </form>
    </div>
  </div>
</body>
